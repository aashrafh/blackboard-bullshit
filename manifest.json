{
    "manifest_version": 2,
    "name": "Blackboard Bullshit",
    "description": "An extension to download recorded videos from Blackboard Ultra",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "background",
        "downloads",
        "activeTab",
        "*://*.bbcollab.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.bbcollab.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }
}